<div id="top-container" class="container-fluid">
    <h1 id="main-title" class="text-center">Pesquise aqui o cliente</h1>
    <p id="main-subtitle" class="text-center">Voce pode pesquisar usando nome, telefone e email</p> 
    <form id="search-form" class="form-inline" action="/" method="GET">
        <div class="form-group col-md-10">
            <input type="text" class="form-control" id="cliente" name="cliente" placeholder="Digite o cliente que esta buscando">
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary">Procurar</button>
        </div>
    </form>
    </div>
    <main>
        <div id="clientes-container" class="container">
            <div class="row">
                <div class="col-md-12">
                    {{#if search}}
                    <h2 id="cliente-list-title">Buscando clientes que contem: {{search}}</h2>
                    {{else}}
                    <h2 id="cliente-list-title">Clientes recentes</h2>
                    {{/if}}
                    <ul id="cliente-list" class="list-group">
                        {{#each clientes}}
                        <li class="list-group-item {{#if dataValues.feedback}}new-cliente{{/if}}">
                            <img src="/img/company.svg" alt="Company">
                            <p>{{dataValues.email}}</p>
                            <h2>{{dataValues.nome}}</h2>
                            <p>{{dataValues.telefone}}</p>
                            <span class="new-cliente-label">NOVO</span>
                            <a class="btn btn-primary" href="/clientes/view/{{dataValues.id}}">Ver Cliente</a>
                        </li>
                        {{/each}}
                    </ul>
                </div>
            </div>
            </div>
        </div>
    </main>